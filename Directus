      - key: DB_DATABASE
        value: "YOUR_DB_NAME"
      - key: DB_USER
        value: "YOUR_DB_USER"
      - key: DB_PASSWORD
        sync: false
      - key: KEY
        value: "change-this-key"
      - key: SECRET
        value: "change-this-secret"
      - key: PUBLIC_URL
        value: "https://directus.onrender.com"
